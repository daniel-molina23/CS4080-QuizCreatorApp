<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@drawable/main_menu"
    >

    <TextView
        android:id="@+id/kotlin_group_header"
        android:layout_width="300dp"
        android:layout_height="70dp"
        android:layout_marginStart="49dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="62dp"
        android:layout_marginBottom="196dp"
        android:gravity="center"
        android:text="@string/kotlin_group"
        android:textSize="24dp"
        android:textStyle="bold|italic"
        android:textColor="@color/silver"
        app:layout_constraintBottom_toTopOf="@+id/add_question_button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/study_buddy_header" />

    <Button
        android:id="@+id/add_question_button"
        android:layout_width="300dp"
        android:layout_height="67dp"
        android:layout_marginTop="120dp"
        android:text="@string/add_question"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/kotlin_group_header" />

    <Button
        android:id="@+id/take_quiz_button"
        android:layout_width="300dp"
        android:layout_height="67dp"
        android:layout_marginBottom="64dp"
        android:text="@string/take_quiz"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/add_question_button" />

    <TextView
        android:id="@+id/study_buddy_header"
        android:layout_width="300dp"
        android:layout_height="118dp"
        android:text="@string/app_name"
        android:textSize="35dp"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:gravity="center"
        app:layout_constraintBottom_toTopOf="@+id/kotlin_group_header"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.426"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.479" />
</androidx.constraintlayout.widget.ConstraintLayout>